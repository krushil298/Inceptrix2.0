{
  "expo": {
    "name": "FarmEase",
    "slug": "farmease-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "farmease",
    "splash": {
      "backgroundColor": "#2D6A4F"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.farmease.app",
      "config": {
        "googleMapsApiKey": "your-google-maps-api-key"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#2D6A4F"
      },
      "package": "com.farmease.app",
      "config": {
        "googleMaps": {
          "apiKey": "your-google-maps-api-key"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "FarmEase needs your camera to scan crop diseases"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "FarmEase needs your photos to detect crop diseases"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "FarmEase needs your location for weather and marketplace"
        }
      ]
    ]
  }
}